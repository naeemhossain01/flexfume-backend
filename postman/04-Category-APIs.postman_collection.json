{
	"info": {
		"_postman_id": "category-apis-collection",
		"name": "FlexFume - Category APIs",
		"description": "Category management including CRUD operations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get All Categories",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/category/all",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"category",
						"all"
					]
				},
				"description": "Retrieve all categories"
			},
			"response": []
		},
		{
			"name": "2. Get Category By ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.id) {",
							"        pm.environment.set('category_id', jsonData.response.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/category/get/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"category",
						"get",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{category_id}}",
							"description": "Category ID"
						}
					]
				},
				"description": "Get category details by ID"
			},
			"response": []
		},
		{
			"name": "3. Create Category (Admin Only)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.id) {",
							"        pm.environment.set('category_id', jsonData.response.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Solid Perfumes\",\n    \"description\": \"Premium solid perfumes with long-lasting fragrances\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/category/add",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"category",
						"add"
					]
				},
				"description": "Create a new category (Admin only)"
			},
			"response": []
		},
		{
			"name": "4. Update Category (Admin Only)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Premium Solid Perfumes\",\n    \"description\": \"Luxury solid perfumes and fragrances for special occasions\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/category/update/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"category",
						"update",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{category_id}}",
							"description": "Category ID"
						}
					]
				},
				"description": "Update category details (Admin only)"
			},
			"response": []
		},
		{
			"name": "5. Delete Category (Admin Only)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/category/delete/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"category",
						"delete",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{category_id}}",
							"description": "Category ID"
						}
					]
				},
				"description": "Delete a category (Admin only)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
