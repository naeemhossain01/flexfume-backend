{
	"info": {
		"_postman_id": "user-management-apis-collection",
		"name": "FlexFume - User Management APIs",
		"description": "User profile management, password operations, and user administration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get User Profile (Authenticated)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user/profile",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						"profile"
					]
				},
				"description": "Get authenticated user's profile information"
			},
			"response": []
		},
		{
			"name": "2. Get User By ID (Admin Only)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.id) {",
							"        pm.environment.set('user_id', jsonData.response.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{user_id}}",
							"description": "User ID"
						}
					]
				},
				"description": "Get user details by user ID (Admin only)"
			},
			"response": []
		},
		{
			"name": "3. Update User (Authenticated)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"John Updated\",\n    \"email\": \"john.updated@example.com\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{user_id}}",
							"description": "User ID"
						}
					]
				},
				"description": "Update user information. Users can only update their own profile unless they are an admin."
			},
			"response": []
		},
		{
			"name": "4. Get All Users (Admin Only)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/user",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user"
					]
				},
				"description": "Get all users (Admin only)"
			},
			"response": []
		},
		{
			"name": "5. Change Password (Authenticated)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"currentPassword\": \"Welcome2Flexfume\",\n    \"newPassword\": \"NewSecurePass456!\",\n    \"confirmPassword\": \"NewSecurePass456!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/change-password",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						"change-password"
					]
				},
				"description": "Change password for authenticated user"
			},
			"response": []
		},
		{
			"name": "6. Reset Password Request (Send OTP)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/user/reset-password-request?phoneNumber=+8801712402628&type=PASSWORD_RESET",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						"reset-password-request"
					],
					"query": [
						{
							"key": "phoneNumber",
							"value": "+8801712402628",
							"description": "Use admin phone number or any registered user"
						},
						{
							"key": "type",
							"value": "PASSWORD_RESET"
						}
					]
				},
				"description": "Request password reset OTP for an existing user. Default uses admin phone number (+8801712402628) from seeder."
			},
			"response": []
		},
		{
			"name": "7. Reset Password (With OTP)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phoneNumber\": \"+8801712402628\",\n    \"otp\": \"1234\",\n    \"newPassword\": \"NewSecurePass123!\",\n    \"confirmPassword\": \"NewSecurePass123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/user/reset-password",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"user",
						"reset-password"
					]
				},
				"description": "Reset password using OTP"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
