{
	"info": {
		"_postman_id": "coupon-usage-apis-collection",
		"name": "FlexFume - Coupon Usage APIs",
		"description": "Apply and remove coupons for cart items",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Apply Coupon (Authenticated)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"couponCode\": \"{{coupon_code}}\",\n    \"cartInfoList\": [\n        \"{{product_id}}\"\n    ]\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon-usage",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon-usage"
					]
				},
				"description": "Apply a coupon to cart items. Returns the final discounted amount."
			},
			"response": []
		},
		{
			"name": "2. Apply Coupon - Multiple Products (Authenticated)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"couponCode\": \"SUMMER2024\",\n    \"cartInfoList\": [\n        \"product-id-1\",\n        \"product-id-2\",\n        \"product-id-3\"\n    ]\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon-usage",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon-usage"
					]
				},
				"description": "Apply a coupon to multiple cart items"
			},
			"response": []
		},
		{
			"name": "3. Remove Coupon (Authenticated)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/coupon-usage?code={{coupon_code}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon-usage"
					],
					"query": [
						{
							"key": "code",
							"value": "{{coupon_code}}",
							"description": "Coupon code to remove"
						}
					]
				},
				"description": "Remove an applied coupon"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
