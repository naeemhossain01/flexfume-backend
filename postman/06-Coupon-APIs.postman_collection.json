{
	"info": {
		"_postman_id": "coupon-apis-collection",
		"name": "FlexFume - Coupon APIs",
		"description": "Coupon management including CRUD operations and usage statistics",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get All Coupons (Admin Only)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/coupon/all",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon",
						"all"
					]
				},
				"description": "Retrieve all coupons with usage statistics (Admin only)"
			},
			"response": []
		},
		{
			"name": "2. Get Coupon By ID (Admin Only)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.id) {",
							"        pm.environment.set('coupon_id', jsonData.response.id);",
							"    }",
							"    if (jsonData.response && jsonData.response.code) {",
							"        pm.environment.set('coupon_code', jsonData.response.code);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/coupon/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{coupon_id}}",
							"description": "Coupon ID"
						}
					]
				},
				"description": "Get coupon details by ID with usage statistics (Admin only)"
			},
			"response": []
		},
		{
			"name": "3. Create Coupon (Admin Only)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.id) {",
							"        pm.environment.set('coupon_id', jsonData.response.id);",
							"    }",
							"    if (jsonData.response && jsonData.response.code) {",
							"        pm.environment.set('coupon_code', jsonData.response.code);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"code\": \"SUMMER2024\",\n    \"discountType\": \"PERCENTAGE\",\n    \"discountValue\": 20,\n    \"minOrderValue\": 1000,\n    \"maxDiscount\": 500,\n    \"validFrom\": \"2024-06-01T00:00:00Z\",\n    \"validUntil\": \"2024-08-31T23:59:59Z\",\n    \"usageLimit\": 100\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon"
					]
				},
				"description": "Create a new coupon (Admin only). DiscountType can be PERCENTAGE or FIXED"
			},
			"response": []
		},
		{
			"name": "4. Create Fixed Discount Coupon (Admin Only)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"code\": \"FIXED100\",\n    \"discountType\": \"FIXED\",\n    \"discountValue\": 100,\n    \"minOrderValue\": 500,\n    \"validFrom\": \"2024-01-01T00:00:00Z\",\n    \"validUntil\": \"2024-12-31T23:59:59Z\",\n    \"usageLimit\": 200\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon"
					]
				},
				"description": "Create a fixed discount coupon (Admin only)"
			},
			"response": []
		},
		{
			"name": "5. Update Coupon (Admin Only)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"code\": \"SUMMER2024\",\n    \"discountType\": \"PERCENTAGE\",\n    \"discountValue\": 25,\n    \"minOrderValue\": 800,\n    \"maxDiscount\": 600,\n    \"validFrom\": \"2024-06-01T00:00:00Z\",\n    \"validUntil\": \"2024-09-30T23:59:59Z\",\n    \"usageLimit\": 150,\n    \"active\": true\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{coupon_id}}",
							"description": "Coupon ID"
						}
					]
				},
				"description": "Update coupon details (Admin only)"
			},
			"response": []
		},
		{
			"name": "6. Deactivate Coupon (Admin Only)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"active\": false\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/coupon/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{coupon_id}}",
							"description": "Coupon ID"
						}
					]
				},
				"description": "Deactivate a coupon (Admin only)"
			},
			"response": []
		},
		{
			"name": "7. Delete Coupon (Admin Only)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/coupon/:id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"coupon",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{coupon_id}}",
							"description": "Coupon ID"
						}
					]
				},
				"description": "Delete a coupon (Admin only). Cannot delete if coupon has usage history."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
