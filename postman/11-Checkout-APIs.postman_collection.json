{
	"info": {
		"_postman_id": "checkout-apis-collection",
		"name": "FlexFume - Checkout APIs",
		"description": "Checkout process with OTP verification for guest and registered users",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Send Checkout OTP",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phoneNumber\": \"+8801712345678\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/checkout/send-otp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"checkout",
						"send-otp"
					]
				},
				"description": "Send OTP for checkout verification"
			},
			"response": []
		},
		{
			"name": "2. Verify Checkout OTP - New User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.token) {",
							"        pm.environment.set('checkout_token', jsonData.response.token);",
							"    }",
							"    if (jsonData.response && jsonData.response.userId) {",
							"        pm.environment.set('user_id', jsonData.response.userId);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phoneNumber\": \"+8801712345678\",\n    \"otp\": \"123456\",\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"address\": \"Building A, Main Road, Gulshan\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/checkout/verify-otp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"checkout",
						"verify-otp"
					]
				},
				"description": "Verify OTP and create new user account for checkout. Returns JWT token and user details."
			},
			"response": []
		},
		{
			"name": "3. Verify Checkout OTP - Existing User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.response && jsonData.response.token) {",
							"        pm.environment.set('checkout_token', jsonData.response.token);",
							"    }",
							"    if (jsonData.response && jsonData.response.userId) {",
							"        pm.environment.set('user_id', jsonData.response.userId);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phoneNumber\": \"{{phoneNumber}}\",\n    \"otp\": \"123456\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/checkout/verify-otp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"checkout",
						"verify-otp"
					]
				},
				"description": "Verify OTP for existing user. Returns JWT token and user details."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
